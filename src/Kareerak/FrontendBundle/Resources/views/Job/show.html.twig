<h1>Job</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Jobtitle</th>
            <td>{{ entity.jobTitle }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Jobpostcreationtimestamp</th>
            <td>{{ entity.jobPostCreationTimestamp|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Jobpostexpirydate</th>
            <td>{{ entity.jobPostExpiryDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Jobstartdate</th>
            <td>{{ entity.jobStartDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Experienceneeded</th>
            <td>{{ entity.experienceNeeded }}</td>
        </tr>
        <tr>
            <th>Degreeneeded</th>
            <td>{{ entity.degreeNeeded }}</td>
        </tr>
        <tr>
            <th>Majorneeded</th>
            <td>{{ entity.majorNeeded }}</td>
        </tr>
        <tr>
            <th>Universitypreferred</th>
            <td>{{ entity.universityPreferred }}</td>
        </tr>
        <tr>
            <th>Concentrationpreferred</th>
            <td>{{ entity.concentrationPreferred }}</td>
        </tr>
        <tr>
            <th>Workinghours</th>
            <td>{{ entity.workingHours }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('job') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('job_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('job_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
