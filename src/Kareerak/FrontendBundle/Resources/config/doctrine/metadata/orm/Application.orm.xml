<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application" table="application">
    <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="timestamp" type="datetime" column="timestamp"/>
    <field name="notes" type="string" column="notes" length="5000"/>
    <field name="starred" type="boolean" column="starred"/>
    <field name="coverLetter" type="string" column="cover_letter" length="5000"/>
    <many-to-many field="attachment" target-entity="Attachment" inversed-by="application">
      <join-table name="application_attachments">
        <join-columns>
          <join-column name="application_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="attachment_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-one field="job" target-entity="Job" orphan-removal="">
      <join-columns>
        <join-column name="job_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="status" target-entity="ApplicationStatus" orphan-removal="">
      <join-columns>
        <join-column name="status_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="seeker" target-entity="Seeker" orphan-removal="">
      <join-columns>
        <join-column name="seeker_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <lifecycle-callbacks/>
  </entity>
</doctrine-mapping>
