<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Job" table="job">
    <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="jobTitle" type="string" column="job_title" length="255"/>
    <field name="description" type="string" column="description" length="5000"/>
    <field name="slug" type="string" column="slug" length="255"/>
    <field name="jobPostCreationTimestamp" type="datetime" column="job_post_creation_timestamp"/>
    <field name="jobPostExpiryDate" type="datetime" column="job_post_expiry_date"/>
    <field name="jobStartDate" type="datetime" column="job_start_date"/>
    <field name="experienceNeeded" type="integer" column="experience_needed"/>
    <field name="degreeNeeded" type="string" column="degree_needed" length="255"/>
    <field name="majorNeeded" type="string" column="major_needed" length="255"/>
    <field name="universityPreferred" type="integer" column="university_preferred"/>
    <field name="concentrationPreferred" type="string" column="concentration_preferred" length="255"/>
    <field name="workingHours" type="string" column="working_hours" length="255"/>
    <many-to-many field="skill" target-entity="Skill" inversed-by="job">
      <join-table name="job_skill">
        <join-columns>
          <join-column name="job_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="skill_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-one field="careerLevel" target-entity="CareerLevel" orphan-removal="">
      <join-columns>
        <join-column name="career_level_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="jobType" target-entity="JobType" orphan-removal="">
      <join-columns>
        <join-column name="job_type_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="industry" target-entity="Industry" orphan-removal="">
      <join-columns>
        <join-column name="industry_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="employer" target-entity="Employer" orphan-removal="">
      <join-columns>
        <join-column name="employer_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="country" target-entity="Country" orphan-removal="">
      <join-columns>
        <join-column name="country_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="city" target-entity="City" orphan-removal="">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="area" target-entity="Area" orphan-removal="">
      <join-columns>
        <join-column name="area_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <lifecycle-callbacks/>
  </entity>
</doctrine-mapping>
