<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Attachment" table="attachment">
    <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255"/>
    <field name="fileName" type="string" column="file_name" length="255"/>
    <field name="filePath" type="string" column="file_path" length="255"/>
    <field name="dateUploaded" type="datetime" column="date_uploaded"/>
    <field name="mimetype" type="string" column="mimetype" length="255"/>
    <many-to-many field="application" target-entity="Application" mapped-by="attachment"/>
    <many-to-one field="seeker" target-entity="Seeker" orphan-removal="">
      <join-columns>
        <join-column name="seeker_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <lifecycle-callbacks/>
  </entity>
</doctrine-mapping>
